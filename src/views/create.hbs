<!-- Starts Main Section -->
<main>
    <!-- Start Add Photo Section -->
    <div class="createPage">
        <h2>Add photo</h2>
        <!-- Start Add Photo Form -->
        <form action="/create" method="post">
            <p>
                <input type="text" name="name" placeholder="Name" value="{{data.name}}">
            </p>

            <p>
                <input type="number" name="age" placeholder="Age" value="{{data.age}}">
            </p>

            <p>
                <textarea type="text" name="description" placeholder="Description">{{data.description}}</textarea>
            </p>

            <p>
                <input type="text" name="location" placeholder="Location" value="{{data.location}}">
            </p>

            <p>
                <input type="text" name="image" placeholder="Link to image" value="{{data.image}}">
            </p>
            <!-- Add Photo Button -->
            <button class="add-btn" type="submit">Add Photo</button>
        </form>
    </div>
</main>