<!-- Starts Main Section -->
<main>
    <!-- Start Add Photo Section -->
    <div class="editPage">
        <h2>Edit photo</h2>
        <!-- Start Add Photo Form -->
        <form action="/catalog/{{currPet._id}}/edit" method="post">
            <p>
                <input type="text" name="name" placeholder="Name" value="{{currPet.name}}">
            </p>

            <p>
                <input type="number" name="age" placeholder="Age" value="{{currPet.age}}">
            </p>

            <p>
                <textarea type="text" name="description" placeholder="Description">{{currPet.description}}</textarea>
            </p>

            <p>
                <input type="text" name="location" placeholder="Location" value="{{currPet.location}}">
            </p>

            <p>
                <input type="text" name="image" placeholder="Link to image" value="{{currPet.image}}">
            </p>
            <!-- Add Photo Button -->
            <button class="edit-btn" type="submit">Edit Photo</button>
        </form>
    </div>
</main>